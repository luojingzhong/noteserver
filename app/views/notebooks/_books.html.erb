<ul class="nav nav-tabs">
  <li><%= link_to "所有笔记",'','data-toggle' => 'tab',:remote => true %></li>
  <% current_user.notebooks.each do |notebook| %>
    <li id="book_<%= notebook.id %>">
      <div class="btn-group">
        <%= link_to notebook.name,'','data-toggle' => 'tab',:remote => true %>
        <a type="button" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <span class="caret"></span>
          <span class="sr-only">Toggle Dropdown</span>
        </a>
        <ul class="dropdown-menu">
          <li><%= link_to '删除',notebook_path(notebook),method: :delete,remote: true,data: {confirm: '是否确定删除？'} %></li>
          <li><a href="#" onclick="renameNotebook(<%= notebook.id %>)">重命名</a></li>
        </ul>
      </div>
    </li>
  <% end %>
  <li>
    <a type="button" title="添加笔记本" onclick="showModal('#addNotebook')">
      <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
    </a>
  </li>
</ul>

<script type="text/javascript">
  function renameNotebook(id){
    $('#notebook_id').val(id);
    $('#renameNotebook').modal('show');
  }
</script>